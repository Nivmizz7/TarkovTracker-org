{
  "private": true,
  "name": "tarkov-tracker-monorepo",
  "type": "module",
  "workspaces": [
    "functions",
    "frontend"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "scripts": {
    "dev": "concurrently \"cd frontend && npm run dev\" \"npm run emulators:local\"",
    "build": "npm run build --workspaces",
    "build:functions": "npm run build --workspace=functions",
    "build:frontend": "npm run build --workspace=frontend",
    "build:frontend:dev": "npm run build:dev --workspace=frontend",
    "build:frontend:prod": "npm run build:prod --workspace=frontend",
    "emulators:start": "firebase emulators:start --only auth,functions,firestore,database,hosting",
    "emulators:local": "npm run build:functions && firebase emulators:start --only auth,functions,firestore,database,hosting,pubsub",
    "docs": "npm run swagger --workspace=functions",
    "docs:generate": "npm run build:functions && npm run swagger --workspace=functions",
    "docs:serve": "npm run docs:generate && echo 'API docs generated! Open docs/index.html in your browser to view the Swagger UI.'",
    "deploy:dev": "firebase use dev && npm run build:functions && npm run docs:generate && npm run build:frontend:dev && firebase deploy",
    "deploy:prod": "firebase use prod && npm run build:functions && npm run docs:generate && npm run build:frontend:prod && firebase deploy",
    "lint": "eslint .",
    "format": "prettier --write --no-error-on-unmatched-pattern \"frontend/**/*.vue\" \"frontend/**/*.js\" \"frontend/**/*.ts\" \"functions/**/*.js\" \"functions/**/*.ts\"",
    "format:check": "prettier --check --no-error-on-unmatched-pattern \"frontend/**/*.vue\" \"frontend/**/*.js\" \"frontend/**/*.ts\" \"functions/**/*.js\" \"functions/**/*.ts\"",
    "clean": "rm -rf firebase-export-* *-debug.log firebase-debug*.log",
    "export:data": "firebase emulators:start --import=./local_data --export-on-exit=./local_data --only auth,functions,firestore,database,hosting,pubsub",
    "deps": "npx taze --r --I",
    "firebase:config": "node scripts/generate-firebaserc.js"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^22.16.5",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.3.0",
    "firebase-tools": "^14.11.1",
    "globals": "^16.3.0",
    "taze": "^19.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vue-eslint-parser": "^10.2.0"
  }
}
